<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>
    
    <style name = "ActionBarTheme" parent = "@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name = "android:background">@android:color/holo_red_dark</item>
        <item name = "android:textColor">@color/dark_grey</item>
    </style>
    
    <style name = "List" parent = "@android:style/Widget.ListView">
       <item name="android:divider">@android:color/transparent</item>
       <item name = "android:dividerHeight">1.0sp</item>
    </style>
    <style name = "boxround" parent = "@android:style/Widget.Spinner">
        <item name = "android:shadowDy">2</item>
    </style>

</resources>
